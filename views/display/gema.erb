<div class="information_popup_container">
	<div class="information">
		<img src=<%= gema.img_path %> alt=<%= gema.name %>, id='icon' />
	</div>
	<div class="popup_information">
		<h2 style="padding: 5px 5px 5px 5px; color:white;"><%= gema.name.capitalize %></h2>
		<center><img src=<%= gema.img_path %> alt=<%= gema.name %>, id='icon3'/></center>
		<br/>
		<table>
			<% gema.fits.keys.each_with_index do |posicion, i| %>
				<tr>
					<th><%= posicion %></th>
					<th><%= gema.fits.values[i] %></th>
				</tr>
			<% end %>
		</table>
	</div>
</div>